<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <script>window.$ = window.jQuery = require('jquery');</script>
</head>

<body>
    <button class="load-more">Načíst více</button>

    <form id="add-article">
        <label for="title">title</label>
        <input type="text" name="title">
        <label for="text">text</label>
        <input type="text" name="text">
        <label for="subtitle">subtitle</label>
        <input type="text" name="subtitle">
        <input type="submit">
    </form>

    <% articles.forEach(function(article){ %>
    <article data-created="<%= article.createdAt %>">
        <h1><%= article.title %></h1>
        <% }); %>
    </article>


    <script>
        let ipcRenderer = require('electron').ipcRenderer;

        $("#add-article").submit((e) => {
            e.preventDefault();
            let formData = $("#add-article").serializeArray();
            ipcRenderer.send('submitForm', formData);
        });

        $(".load-more").click((e) => {
            e.preventDefault();
            let first_created = $("article").first().data("created");
            console.log(ipcRenderer.send("getArticles", first_created));
        });


    </script>

</body>

</html>